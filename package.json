{
  "name": "frontend-template",
  "version": "1.0.0",
  "description": "Минимальный шаблон для фронтенд-проектов на HTML, SCSS и JS.",
  "main": "index.js",
  "scripts": {
    "start": "lite-server --baseDir=src",
    "watch-css": "sass --watch src/scss:src/css --style=expanded",
    "dev": "concurrently \"npm run watch-css\" \"npm run start\"",
    "build-css": "sass src/scss:dist/css --style=compressed",
    "build-copy": "cpx \"src/**/*.{html,js,png,jpg,jpeg,svg,webp,woff,woff2,ttf}\" dist",
    "build": "npm run build-css && npm run build-copy",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [],
  "author": "Your Name",
  "license": "ISC",
  "homepage": "https://your-github-username.github.io/frontend-template",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cpx": "^1.5.0",
    "gh-pages": "^6.3.0",
    "lite-server": "^2.6.1",
    "sass": "^1.93.2"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
